    	<%@ include file="/WEB-INF/include/base_js.jsp" %>
        <script type="text/javascript">
            $(function () {
			    $(".list-group-item").click(function(){
				    if ( $(this).find("ul") ) {
						$(this).toggleClass("tree-closed");
						if ( $(this).hasClass("tree-closed") ) {
							$("ul", this).hide("fast");
						} else {
							$("ul", this).show("fast");
						}
					}
				});
            });

            //window.load代表告诉浏览器要跳到哪个页面中去，这里 的herf代表退出系统那个标签 ，因为这里用了那个标签来使用函数的，this就代表当前方法的调用者（logoutBtn"）
            $("#logoutBtn").click(function(){
            	var url = this.href;
            	//确认注销的提示
            	layer.confirm("你真的要注销吗?" , {icon:2 , title:"退出提示"} , function(index){
            		layer.close(index);
            		layer.msg("注销中..." , {icon:16 , time:3000});
            		//3秒后执行传入的函数
            		setTimeout(function(){
            			window.location = url;
            		} , 3000);

            	});


            	return false;//取消a标签的默认行为
            });
            //高亮显示
            $(".tree a:contains('用户维护')").css("color","tomato");
            $(".tree a:contains('用户维护')").parent("ul").show();
            $(".tree a:contains('用户维护')").parent("ul").parent("li").toggle("tree-close");

        </script>
